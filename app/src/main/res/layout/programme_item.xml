            <!--                    android:layout_marginEnd="@dimen/_48pxh"-->
            <!--                    android:background="@drawable/rectangle_bg_teal_300_radius_1_5" />-->
            <!--            </LinearLayout>-->
        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewDrops"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_19dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_17dp"
            android:contentDescription="dropMenu"
            app:srcCompat="@drawable/ic_more_vert_white_24dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
